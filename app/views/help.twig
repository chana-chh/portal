{% extends "templates/app.twig" %}
{% block naslov %}
<div class="row m-2">
    <div class="col-lg-10">
        <h1 id="top">
            <img src="{{ base_url() }}/img/dok.png" alt="Документа" style="max-width: 64px;
  width:100%;"> &emsp;Упутство за ауторе секције ДОКУМЕНТА градског портала
        </h1>
    </div>
