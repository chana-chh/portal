{% extends "templates/app.twig" %}
{% block stil %}
{% endblock stil %}

{% block naslov %}
<div class="row">
	<div class="col">
		<h1><i class="fas fa-file-signature text-secondary"></i> Додавање објаве</h1>
	</div>
</div>
<hr>

<div class="card border-dark mb-3">
	<div class="card-body text-dark">
		<form id="glavna" action="{{ path_for('autor.objave.dodavanje') }}" method="POST" class="needs-validation"
			id="forma" novalidate>
			{{ csrf | raw }}
			<div class="form-row">
				<div class="form-group col">
					<label for="naslov">
						<h3>Наслов</h3>
					</label>
					<input type="text" name="naslov" id="naslov" autocomplete="off"
						class="form-control form-control-lg{{ errors.naslov[0] ? ' is-invalid' : '' }}"
						value="{{ old.naslov ? : '' }}" />
					<div class="valid-feedback">Исправно попуњено</div>
					<div class="invalid-feedback">{{ errors.naslov[0] ? : 'Грешка' }}</div>
				</div>
			</div>
			<hr>
			<div class="form-row justify-content-between mt-2">
				<div class="col-12 text-right align-self-end">
					<button type="submit" id="dugme-submit" class="btn btn-primary" title="Dodaj novi ugovor"><i
							class="fas fa-save"></i> Сними објаву</button>
					<a href="{{ path_for('autor.objave.lista') }}" class="btn btn-secondary">
						<i class="fas fa-ban"></i> Одустани</a>
				</div>
			</div>
		</form>
	</div>
</div>

{% endblock naslov %}
{% block sadrzaj %}
{% endblock sadrzaj %}
{% block traka %}
{% endblock traka %}
{% block skripta %}
{% endblock skripta %}
